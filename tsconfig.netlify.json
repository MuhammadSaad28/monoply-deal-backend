{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./netlify/functions",
    "rootDir": "./src/netlify",
    "declaration": false,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/netlify/**/*", "src/game/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}
